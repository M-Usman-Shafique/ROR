 <%= form_with model: document do |form| %>
      <div class="mb-4">
        <%= form.label :name, class: "block text-sm mb-1" %>
        <%= form.text_field :name, class: "w-full px-3 py-2 rounded-lg bg-white/5 text-white border border-gray-600 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
       <% @document.errors.full_messages_for(:name).each do |messsage| %>
         <p class="text-red-600 text-xs mt-1">
         * <%= messsage %>
         </p>
        <% end %>
      </div>

      <div class="mb-4">
        <%= form.label :category, class: "block text-sm mb-1" %>
        <%= form.select :category,
        options_for_select(Document::CATEGORIES, selected: document.category),
        {prompt: "Select Category"},
        {class: "w-full px-3 py-2 rounded-lg bg-zinc-800 text-white border border-gray-600 focus:outline-none focus:ring-2 focus:ring-blue-500"} %>
        <% @document.errors.full_messages_for(:category).each do |messsage| %>
         <p class="text-red-600 text-xs mt-1">
         * <%= messsage %>
         </p>
        <% end %>
      </div>

      <div class="mb-4">
        <%= form.label :employee_id, class: "block text-sm mb-1" %>
        <%= form.select :employee_id,
              options_for_select(Employee.all.map { |employee| [employee.name_with_email, employee.id] },
              selected: document.employee_id),
              {prompt: "Select Employee"},
              {class: "w-full px-3 py-2 rounded-lg bg-zinc-800 text-white border border-gray-600 focus:outline-none focus:ring-2 focus:ring-blue-500"} %>
        <% @document.errors.full_messages_for(:employee_id).each do |messsage| %>
         <p class="text-red-600 text-xs mt-1">
         * <%= messsage %>
         </p>
        <% end %>
      </div>

      <div class="mt-6">
        <%= form.submit class: "w-full py-3 bg-gray-300 text-black font-semibold rounded-lg hover:bg-gray-400 cursor-pointer" %>
      </div>
    <% end %>