<div class="min-h-[calc(100vh-20vh)] flex flex-col items-center justify-center">
  <div class="bg-white/5 py-6 px-8 rounded-lg shadow-lg w-full max-w-xl">
    <div class="mb-6 text-center">
      <h1 class="text-2xl font-bold mb-4 text-white">Employee Details</h1>
    </div>
    <div class="space-y-8">
      <!-- Employee Basic Details -->
      <div class="flex items-center justify-between">
        <div>
          <label class="block text-sm font-medium text-gray-300">Name</label>
          <p class="text-lg font-semibold text-gray-100"><%= @employee.username %></p>
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-300">Age</label>
          <p class="text-lg font-semibold text-gray-100"><%= @employee.age %></p>
        </div>
      </div>
      <div class="flex items-center justify-between">
        <div>
          <label class="block text-sm font-medium text-gray-300">Email</label>
          <p class="text-lg font-semibold text-gray-100"><%= @employee.email %></p>
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-300">Password</label>
          <p class="text-lg font-semibold text-gray-100"><%= @employee.password %></p>
        </div>
      </div>

      <!-- Documents Section -->
      <div>
        <label class="block font-bold text-gray-300 mb-2">Documents</label>
        <% if @employee.documents.present? %>
          <div class="flex items-center gap-2">
            <% @employee.documents.each do |document| %>
              <div class="bg-white/10 p-4 rounded-lg shadow-sm max-w-[200px]">
                <% if document.image.attached? %>
                  <div class="mt-2">
                <%= image_tag document.image, class: "w-full h-auto rounded-lg" %>
                  </div>
                <% end %>
            <div class="mt-3">
                <h2 class="font-bold text-white"><%= document.name %></h2>
                <p class="text-sm text-gray-300">Category: <%= document.category %></p>
            </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <p class="text-gray-500 text-sm">No documents available.</p>
        <% end %>
      </div>

      <!-- Action Buttons -->
      <div class="mt-2 flex gap-2">
        <%= link_to "Edit", edit_employee_path(@employee), class: "flex flex-1 justify-center bg-white/10 text-white p-2 text-sm rounded-md" %>
        <%= link_to "Delete", employee_path(@employee), method: :delete, data: { confirm: "Are you sure you want to delete this employee?" }, class: "flex flex-1 justify-center bg-red-600/30 text-white p-2 text-sm rounded-md" %>
      </div>
    </div>
  </div>
</div>
