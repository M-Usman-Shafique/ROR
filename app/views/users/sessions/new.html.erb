<div class="min-h-screen flex items-center justify-center bg-neutral-900 text-gray-300">
  <div class="w-full max-w-md bg-white/5 p-6 rounded-lg shadow-lg">
    <h2 class="text-2xl font-bold mb-6 text-white text-center">Login</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-6" }) do |f| %>
      <!-- Email Field -->
      <div>
        <%= f.label :email, class: "block text-sm mb-1 text-gray-300" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-3 py-2 rounded-lg bg-white/5 text-white border border-gray-600 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
        <% resource.errors.full_messages_for(:email).each do |message| %>
          <p class="text-red-600 text-xs mt-1">
            * <%= message %>
          </p>
        <% end %>
      </div>

      <!-- Password Field -->
      <div>
        <%= f.label :password, class: "block text-sm mb-1 text-gray-300" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "w-full px-3 py-2 rounded-lg bg-white/5 text-white border border-gray-600 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
        <% resource.errors.full_messages_for(:password).each do |message| %>
          <p class="text-red-600 text-xs mt-1">
            * <%= message %>
          </p>
        <% end %>
      </div>

      <!-- Remember Me Checkbox -->
      <% if devise_mapping.rememberable? %>
        <div class="flex items-center gap-2">
          <%= f.check_box :remember_me, class: "w-4 h-4 rounded border-gray-600 text-blue-500 focus:ring-2 focus:ring-blue-500" %>
          <%= f.label :remember_me, class: "text-sm text-gray-300" %>
        </div>
      <% end %>

      <!-- Submit Button -->
      <div class="mt-6">
        <%= f.submit "Log in", class: "w-full py-3 bg-gray-300 text-black font-semibold rounded-lg hover:bg-gray-400 cursor-pointer" %>
      </div>
    <% end %>

    <div class="mt-4 text-center">
      <%= render "users/shared/links" %>
    </div>
  </div>
</div>
