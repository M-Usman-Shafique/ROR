<div class="min-h-screen flex flex-col items-center justify-center bg-neutral-900 text-gray-300">
  <div class="w-full max-w-md bg-white/5 p-6 rounded-lg shadow-lg">
    <h2 class="text-2xl font-bold mb-6 text-white text-center">Forgot your password?</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>

    <div class="mb-4">
      <%= f.label :email, class: "block text-sm font-medium text-gray-300 mb-2" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-3 py-2 rounded-lg bg-white/5 text-white border border-gray-600 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div class="mt-6">
      <%= f.submit "Send me reset password instructions", class: "w-full py-3 bg-blue-500 text-white font-semibold rounded-lg hover:bg-blue-600 cursor-pointer" %>
    </div>
  <% end %>

  <div class="mt-6 text-center text-sm text-gray-400">
    <%= render "users/shared/links" %>
  </div>
</div>
</div>