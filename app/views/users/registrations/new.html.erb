<div class="min-h-screen flex items-center justify-center bg-neutral-900 text-gray-300">
  <div class="w-full max-w-md bg-white/5 p-6 rounded-lg shadow-lg">
    <h2 class="text-2xl font-bold mb-6 text-white text-center">Sign up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-6" }) do |f| %>
      <!-- Render Error Messages -->
      <%= render "users/shared/error_messages", resource: resource %>

      <!-- Email Field -->
      <div>
        <%= f.label :email, class: "block text-sm mb-1 text-gray-300" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-3 py-2 rounded-lg bg-white/5 text-white border border-gray-600 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
        <% resource.errors.full_messages_for(:email).each do |message| %>
          <p class="text-red-600 text-xs mt-1">
            * <%= message %>
          </p>
        <% end %>
      </div>

      <!-- Password Field -->
      <div>
        <%= f.label :password, class: "block text-sm mb-1 text-gray-300" %>
        <% if @minimum_password_length %>
          <p class="text-xs text-gray-400 mb-1">(<%= @minimum_password_length %> characters minimum)</p>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", class: "w-full px-3 py-2 rounded-lg bg-white/5 text-white border border-gray-600 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
        <% resource.errors.full_messages_for(:password).each do |message| %>
          <p class="text-red-600 text-xs mt-1">
            * <%= message %>
          </p>
        <% end %>
      </div>

      <!-- Password Confirmation Field -->
      <div>
        <%= f.label :password_confirmation, class: "block text-sm mb-1 text-gray-300" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full px-3 py-2 rounded-lg bg-white/5 text-white border border-gray-600 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
        <% resource.errors.full_messages_for(:password_confirmation).each do |message| %>
          <p class="text-red-600 text-xs mt-1">
            * <%= message %>
          </p>
        <% end %>
      </div>

      <!-- Submit Button -->
      <div class="mt-6">
        <%= f.submit "Sign up", class: "w-full py-3 bg-gray-300 text-black font-semibold rounded-lg hover:bg-gray-400 cursor-pointer" %>
      </div>
    <% end %>

    <div class="mt-4 text-center">
      <%= render "users/shared/links" %>
    </div>
  </div>
</div>
